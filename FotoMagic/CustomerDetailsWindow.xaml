<Window x:Class="FotoMagic.CustomerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FotoMagic"
        mc:Ignorable="d"
        Title="FotoMagic" Height="554.224" Width="565.803" WindowStartupLocation="CenterOwner" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblCustomerName" Content="&lt;Customer Name&gt;" HorizontalAlignment="Left" Margin="24,25,0,0" VerticalAlignment="Top" Foreground="#FF252526" FontFamily="Montserrat Medium" FontSize="18"/>
        <ListView x:Name="lstDates" HorizontalAlignment="Left" Height="342" Margin="71,95,0,0" VerticalAlignment="Top" Width="424">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date"
                                    DisplayMemberBinding="{Binding OwedDate}" Width="150"/>
                    <GridViewColumn Header="Owed Money"
                                    DisplayMemberBinding="{Binding OwedMoney}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnAdd" Content="Button" HorizontalAlignment="Left" Margin="154,479,0,0" VerticalAlignment="Top" Width="75" Click="BtnAdd_Click"/>
        <Button x:Name="btnRemove" Content="Button" HorizontalAlignment="Left" Margin="314,479,0,0" VerticalAlignment="Top" Width="75" Click="BtnRemove_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="413,42,0,0" VerticalAlignment="Top" Width="75"  Click="BtnExit_Click"/>

    </Grid>
</Window>
